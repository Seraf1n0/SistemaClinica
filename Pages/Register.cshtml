@page
@model WEBAPP_Clinica_Registro.Pages.RegisterModel
@{
    ViewData["Title"] = "Registrar Paciente";
}

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <link rel="stylesheet" href="~/css/site.css">
    <title>@ViewData["Title"]</title>
</head>
<body>
    <div class="container">
        <h1>Registrar Paciente</h1>
        <form method="post">
            <div>
                <label for="cedula">Cédula:</label>
                <input type="text" id="cedula" name="Paciente.cedula" required>
                <span asp-validation-for="Paciente.cedula" class="text-danger"></span>
            </div>

            <div>
                <label for="nombre">Nombre:</label>
                <input type="text" id="nombre" name="Paciente.nombre" required>
                <span asp-validation-for="Paciente.nombre" class="text-danger"></span>
            </div>

            <div>
                <label for="fechaNacimiento">Fecha de Nacimiento:</label>
                <input type="date" id="fechaNacimiento" name="Paciente.fechaNacimiento" required>
                <span asp-validation-for="Paciente.fechaNacimiento" class="text-danger"></span>
            </div>

            <div>
                <label for="edad">Edad:</label>
                <input type="number" id="edad" name="Paciente.edad" required>
                <span asp-validation-for="Paciente.edad" class="text-danger"></span>
            </div>

            <div>
                <label for="direccion">Dirección:</label>
                <input type="text" id="direccion" name="Paciente.direccion" required>
                <span asp-validation-for="Paciente.direccion" class="text-danger"></span>
            </div>

            <button type="submit">Registrar</button>
        </form>
    </div>
</body>
</html>